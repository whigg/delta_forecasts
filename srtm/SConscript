# vim: set fileencoding=UTF-8 :
# vim:filetype=python

import os
import process_srtm as ps

Import('*')

resolution = 3
deltas = ['Mekong']
for delta in deltas:
    env.Command(
            source='#data/deltas_shp/deltas.shp',
            target='#data/srtm{0}/{1}_full.tif'.format(resolution, delta),
            action=ps.delta_srtm_composite,
            delta=delta,
            resolution=resolution)

for delta in deltas:
    env.Command(
            source=['#data/deltas_shp/deltas.shp',
                    '#data/srtm{0}/{1}_full.tif'.format(resolution, delta)],
            target='#data/srtm{0}/{1}.tif'.format(resolution, delta),
            action=ps.clip_srtm_to_delta,
            delta=delta,
            resolution=resolution)
                

